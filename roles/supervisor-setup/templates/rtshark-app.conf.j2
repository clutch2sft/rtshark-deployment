[program:rtshark-app]
command=/opt/rtshark-app/venv/bin/gunicorn -w 4 -b 127.0.0.1:5000 app:app
directory=/opt/rtshark-app
autostart=true
autorestart=true
stderr_logfile=/var/log/rtshark-app/rtshark-app.err.log
stdout_logfile=/var/log/rtshark-app/rtshark-app.out.log
user=rtshark
environment=SECRET_KEY="{{ existing_secret_key.stdout | default(generated_secret_key.stdout) }}",ADMIN_PASSWORD="{{ admin_password }}"

